extends layout

block content
  .container-fluid
    each libro in Libro
      .row
        .col
          .container-fluid
            .row.barraresultado
              .col Editar libro
            .row.rowtabla
              .col-4
                .row
                if libro.Foto=="" || libro.Foto == null
                  img#prev.dic(src="/images/diccionario.png")
                else 
                  img#prev.dic(src=libro.Foto)
                
                .row
                  form(action='/administrar/crear_foto', method='post', enctype="multipart/form-data")
                    .col
                      .input-group.file
                        input#foto.form-control(type='file',accept='image/png,image/jpeg,image/jpg,image/webp', name="foto")
                        button#inputGroupFileAddon04.ov-btn-grow-spin.guardar(type='subtmit') Guardar

              .col-8
                .container-fluid
                  br
                  h5 Datos del libro
                  .row
                    form(action='/administrar/libro/editar' method='post')
                      .row
                        .col
                          label.form-label(for='nombre') Nombre:
                          input#nombre.form-control(type='text' name='nombre' requerid  value= libro.Nombre)
                          label.form-label(for='autor') Autor:
                          input#autor.form-control(type='text' name='autor' requerid value= libro.Autor.join())
                          label.form-label(for='editorial') Editorial:
                          input#editorial.form-control(type='text' name='editorial' required value= libro.Editorial)
                          label.form-label(for='lugarE') Lugar edición:
                          input#lugarE.form-control(type='text' name='lugarE' required value= libro.Lugar_Edicion)
                          label.form-label(for='fechaE') Fecha edición:
                          input#fechaE.form-control(type='text' name='fechaE' required value= libro.Fecha_Edicion)
                          label.form-label(for='anioE') Año entrada:
                          input#anioE.form-control(type='text' name='anioE' required value= libro.Año_Entrada)
                          label.form-label(for='unidadesD') Unidades Disponibles:
                          input#unidadesD.form-control(type='number' name='unidadesD' required value= libro.Unidades_Disponibles)
                        .col
                          label.form-label(for='totalU') Total Unidades:
                          input#totalU.form-control(type='number' name='totalU' required value= libro.Total_Unidades)
                          label.form-label(for='numP') Número págs.:
                          input#numP.form-control(type='number' name='numP' required value= libro.Num_Pag)
                          label.form-label(for='numI') Número inventario:
                          input#numI.form-control(type='number' name='numI' required value= libro.Num_Inventario)
                          .row
                            .col
                              label.form-label(for='anaquel') Anaquel - Charola:
                              input#anaquel.form-control(type='text' name='anaquel' required value= libro.Anaquel_Charola)
                            .col
                              label.form-label(for='clasificacion') Clasificación:
                              input#clasificacion.form-control(type='text' name='clasificacion' requerid value= libro.Clasificacion)
                          
                          label.form-label(for='observaciones') Observaciones:
                          textarea#observaciones.form-control(type='text' name='observaciones' requerid )=libro.Observaciones
                          label.form-label(for='descripcion') Descripción:
                          textarea#descripcion.form-control(type='text' name='descripcion' requerid )=libro.Descripcion
                          
                          .row
                            .col(style='text-align: right; padding-top: 10px')
                              a.btn.btn-danger(href='/administrar/admin_buscar') 
                                | Cancelar
                            .col(style='text-align: right; padding-top: 10px')
                        
                              button.btn.btn-success(type='submit')
                                | Guardar     
    script(src="/js/imagen.js") 