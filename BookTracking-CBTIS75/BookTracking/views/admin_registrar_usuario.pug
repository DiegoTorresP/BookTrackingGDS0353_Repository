extends layout

block content
  .row#gbt
    .col
      .btn-group(role='group' aria-label='Navs')
        a.btn.btn-primary#pg(type='button' href='/administrar') General   
          i.bi.bi-caret-right
        button.btn.btn-primary#pgf(type='button' disabled) Registrar usuario  
      | ㅤ
      .btn-group#bt2(role='group' aria-label='Navs')
        button.btn.btn-success#pg(type='button' data-bs-toggle='collapse' data-bs-target='#ropciones' aria-expanded='false' aria-controls='ropciones')
          .row
            .col-md-1 
              span.spinner-grow.spinner-grow-sm(role='status' aria-hidden='true')
            .col
              #ropciones.collapse.collapse-horizontal Opciones:
        #ropciones.collapse.collapse-horizontal
          a.btn#pgo(href='/administrar/lista_usuario') 
            i.bi.bi-people-fill#iops 
            | Ver lista de Alumnos
          a.btnAdmin.btn#pgo(type='button' data-bs-toggle='modal' data-bs-target='#resgistrar_usuarios') 
            i.bi.bi-person-plus-fill#iops
            | Crear usuario administrador
  .container-fluid
    .row
      .col
        .container-fluid
          .row.barraresultado
            .col Resultados: de busqueda
          .row.rowtabla
            form(action='/administrar/crear' method='post') 
              .row
                .col-md-6
                  br
                  |
                  .form-floating.mb-3
                    input#numControl.form-control.form-control-sm(type='number' name='numControl' required='')
                    label.form-label(for='numControl') No. de Control
                  .form-floating.mb-3
                    input#nombre.form-control.form-control-sm(type='text' name='nombre' required='')
                    label.form-label(for='nombre') Nombre:
                  .form-floating.mb-3
                    input#apPaterno.form-control.form-control-sm(type='text' name='apPaterno' required='')
                    label.form-label(for='apPaterno') Apellido paterno:
                  .form-floating.mb-3
                    input#apMaterno.form-control.form-control-sm(type='text' name='apMaterno' required='')
                    label.form-label(for='apMaterno') Apellido Materno:
                  .form-floating.mb-3
                    input#grupo.form-control.form-control-sm(type='text' name='grupo' required='')
                    label.form-label(for='grupo') Grupo:
                  .form-floating.mb-3
                    input#especialidad.form-control.form-control-sm(type='text' name='especialidad' required='')
                    label.form-label(for='especialidad') Especialidad:
                  .form-floating.mb-3
                    input#turno.form-control.form-control-sm(type='text' name='turno' required='')
                    label.form-label(for='turno') Turno:
                .col-md-6
                  br
                  |
                  .form-floating.mb-3
                    input#generacion.form-control.form-control-sm(type='text' name='generacion' required='')
                    label.form-label(for='generacion') Generaci&oacute;n:
                  .form-floating.mb-3
                    select#sexo.form-control.form-control-sm(name='sexo' required='')
                      option
                      option Hombre
                      option Mujer
                    label.form-label(for='sexo') Sexo:
                  .form-floating.mb-3
                    input#curp.form-control.form-control-sm(type='text' name='curp' required='' oninput='validarInput(this)' maxlength="18" minlength="17")
                    label.form-label(for='curp') CURP:
                    pre#resultado.
                  .row
                    .col
                      .form-floating.mb-3
                        input#correo1.form-control.form-control-sm(type='email' name='correo1' required='')
                        label.form-label(for='correo1') Correo 1:
                    .col
                      .form-floating.mb-3
                        input#correo2.form-control.form-control-sm(type='email' name='correo2')
                        label.form-label(for='correo2') Correo 2:
                  .row
                    .col
                      .form-floating.mb-3
                        input#lada.form-control.form-control-sm(type='number' name='lada' required='')
                        label.form-label(for='lada') Lada:
                    .col
                      .form-floating.mb-3
                        input#telefonoFijo1.form-control.form-control-sm(type='number' name='telefonoFijo1')
                        label.form-label(for='telefonoFijo1') Telefono fijo 1:
                  .form-floating.mb-3
                    input#telefonoFijo2.form-control.form-control-sm(type='number' name='telefonoFijo2')
                    label.form-label(for='telefonoFijo2') Telefono fijo 2:
                  .form-floating.mb-3
                    input#telefonoMovil.form-control.form-control-sm(type='number' name='telefonoMovil')
                    label.form-label(for='telefonoMovil') Telefono Movil:
                  
                  .row
                    .col#btnssele
                      a.btn.btn-danger(href='/administrar') 
                        | Cancelar
                      button.btn.btn-success(type='submit' )
                        | Registrar
      #resgistrar_usuarios.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
        .modal-dialog.modal-dialog(role='document')
          .modal-content
            .modal-header
              h5#exampleModalCenterTitle.modal-title Registrar usuario
              button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
              .row
                form(action='/administrar/crear_usuario' method='post')
                  .form-floating.mb-3
                    input#_id.form-control.form-control-sm(type='text' name='numControl')
                    label.form-label(for='numControl') Nombre de usuario
                  .form-floating.mb-3
                    input#nombre.form-control.form-control-sm(type='text' name='nombre' required='')
                    label.form-label(for='nombre') Nombre:
                  .form-floating.mb-3
                    input#apPaterno.form-control.form-control-sm(type='text' name='apPaterno' required='')
                    label.form-label(for='apPaterno') Apellido paterno:
                  .form-floating.mb-3
                    input#apMaterno.form-control.form-control-sm(type='text' name='apMaterno' required='')
                    label.form-label(for='apMaterno') Apellido Materno:
                  .form-floating.mb-3
                    input#password.form-control.form-control-sm(type='password' name='password' required='')
                    label.form-label(for='password') Contraseña:
                  .form-floating.mb-3
                    select#role.form-control.form-control-sm(name='role' required='')
                      option  
                      option admin
                      option profesor
                    label.form-label(for='password' type='text') Seleciona el rol:
                  .row
                    .col#btnssele
                      br
                      button.btn.btn-success(type='submit')
                        | Registrar
    script(src="/js/curp.js")