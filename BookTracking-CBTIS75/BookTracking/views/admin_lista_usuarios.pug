extends layout

block content
  .container-fluid
    .row
      .col
        .container-fluid
          .row.barraresultado
            .col Usuarios
          .row.rowtabla
            .row  
              .col
                table#tablaAlumno.table.table-bordered.tabla
                  thead
                    tr
                      th(style='display: none;') Id
                      th(scope='col') Nombre
                      th(scope='col') Carrera
                      th(scope='col') Telefono
                      th(scope='col') Correo electronico
                      th(scope='col') Estatus
                      th(scope='col') Acciones
                      th(scope='col') Detalle y Edici√≥n
                  tbody
                    each alumno in Alumno
                      tr
                        td#idA(style='display: none;') #{alumno._id}
                        th #{alumno.Nombre_s}
                        td #{alumno.Carrera_Tecnica}
                        td #{alumno.Telefono_movil_celular}
                        td #{alumno.Correo_Electronico_1}
                        td #{alumno.EstatusEscolar}
                        td
                          button.eliminar.btn.btn-outline-danger.bi.bi-trash(onclick='Eliminar('+alumno._id+')' )
                        td 
                          -var url2 = "/administrar/usuario/" + alumno._id
                          a.btn.btn-outline-danger.bi.bi-pencil(href=url2)    
