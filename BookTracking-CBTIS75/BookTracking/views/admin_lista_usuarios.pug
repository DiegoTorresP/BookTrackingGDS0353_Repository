extends layout

block content
  .row#gbt
    .col
      .btn-group(role='group' aria-label='Navs')
        a.btn.btn-primary#pg(type='button' href='/administrar') General   
          i.bi.bi-caret-right-fill
        a.btn.btn-primary#pg(type='button' href='/administrar/registrar_usuario') Registrar usuario   
          i.bi.bi-caret-right
        button.btn.btn-primary#pgf(type='button' disabled) Ver lista de Alumnos
  .container-fluid#conteco
    .row
      .col
        .container-fluid
          .row.barraresultado
            .col Usuarios
          .row.rowtabla
            table#tablaAlumno.table.table-bordered.tabla
              thead
                tr
                  th(style='display: none;') Id
                  th(scope='col') Nombre
                  th(scope='col') Carrera
                  th(scope='col') Telefono
                  th(scope='col') Correo electronico
                  th(scope='col') Estatus
                  th(scope='col') Acciones
                  th(scope='col') Detalle y
                    br
                    | Edici√≥n
              tbody
                each alumno in Alumno
                  if alumno.Roles=="admin" 
                  else
                    tr
                      td#idA(style='display: none;') #{alumno._id}
                      td #{alumno.Nombre_s}
                      td #{alumno.Carrera_Tecnica}
                      td#ind #{alumno.Telefono_movil_celular}
                      td #{alumno.Correo_Electronico_1}
                      td#ind #{alumno.Estatus_Escolar}
                      td#ind
                        button.eliminar.btn.btn-outline-danger.bi.bi-trash(onclick='Eliminar('+alumno._id+')' )
                      td#ind 
                        -var url2 = "/administrar/usuario/" + alumno._id
                        a.btn.btn-outline-danger.bi.bi-pencil(href=url2)    
    script(src="/js/sweet_carga.js")
