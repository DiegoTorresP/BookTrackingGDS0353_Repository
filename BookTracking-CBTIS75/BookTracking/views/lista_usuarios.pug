extends layout

block content
  .container-fluid
    .row
      .col
        .container-fluid
          .row.barraresultado
            .col Usuarios
          .row.rowtabla
            .row  
              .col
                table#tablaAlumno.table.table-bordered.tabla
                  thead
                    tr
                      th(style='display: none;') Id
                      th(scope='col') Nombre
                      th(scope='col') Carrera
                      th(scope='col') Telefono
                      th(scope='col') Correo electronico
                      th(scope='col') Estatus
                      th(scope='col') Acciones
                  tbody
                    each alumno in Alumno
                      tr
                        td(style='display: none;' id='id') #{alumno._id}
                        th #{alumno.Nombre_s}
                        td #{alumno.Carrera_Tecnica}
                        td #{alumno.Telefono_movil_celular}
                        td #{alumno.Correo_Electronico_1}
                        td #{alumno.EstatusEscolar}
                        td 
                          -var url = "/administrar/eliminar/" + alumno._id
                          a.btn.btn-outline-danger.bi.bi-trash(href=url)   
    script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous")           