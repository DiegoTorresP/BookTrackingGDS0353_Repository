extends layout

block content
  .container-fluid
    .row
      .col
        nav.navbar.navbar-light.bg-light.barrabusqueda1
          .col
            .row
              form.container-fluid.justify-content-start(action='/administrar/busqueda_nombre' method='post')
                .col-3.barrabusqueda
                  input#nombre.form(placeholder='Nombre' name='nombre')
                  button.btn.btn-outline-danger.bi.bi-search(type='submit')
          .col
            form.container-fluid.justify-content-start(action='/administrar/busqueda_carrera' method='post')
              .col-3.barrabusqueda
                input#carrera.form(placeholder='Carrera' name='carrera')
                button.btn.btn-outline-danger.bi.bi-search(type='submit')
          .col
            form.container-fluid.justify-content-start(action='/administrar/busqueda_estatus' method='post')
              .col-3.barrabusqueda
                select#estatus.form(placeholder='Estatus' name='estatus')
                  option Estatus
                  option Activo
                  option Inscrito
                button.btn.btn-outline-danger.bi.bi-search(type='submit')
    .row
      .col
        .container-fluid
          .row.barraresultado
            .col Usuarios
          .row.rowtabla
            .row  
              .col
                table#tablaAlumno.table.table-bordered.tabla
                  thead
                    tr
                      th(style='display: none;') Id
                      th(scope='col') Nombre
                      th(scope='col') Carrera
                      th(scope='col') Telefono
                      th(scope='col') Correo electronico
                      th(scope='col') Estatus
                      th(scope='col') Acciones
                      th(scope='col') Ver detalles
                  tbody
                    each alumno in Alumno
                      tr
                        td#idA(style='display: none;') #{alumno._id}
                        th #{alumno.Nombre_s}
                        td #{alumno.Carrera_Tecnica}
                        td #{alumno.Telefono_movil_celular}
                        td #{alumno.Correo_Electronico_1}
                        td #{alumno.EstatusEscolar}
                        td
                          -var url = "/administrar/eliminar/" + alumno._id
                          -var id = alumno._id
                          button.eliminar.btn.btn-outline-danger.bi.bi-trash(onclick="Eliminar()")
                        td 
                          -var url2 = "/administrar/usuario/" + alumno._id
                          a.btn.btn-outline-danger.bi.bi-pencil(href=url2)   
    script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous")           