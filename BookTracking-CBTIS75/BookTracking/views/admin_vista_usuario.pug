extends layout

block content
  .row#gbt
    .col
      .btn-group(role='group' aria-label='Navs')
        a.btn.btn-primary#pg(type='button' href='/administrar') General   
          i.bi.bi-caret-right-fill
        a.btn.btn-primary#pg(type='button' href='/administrar/registrar_usuario') Registrar Usuario   
          i.bi.bi-caret-right-fill
        a.btn.btn-primary#pg(type='button' href='/administrar/lista_usuario') Ver lista de alumnos   
          i.bi.bi-caret-right
        button.btn.btn-primary#pgf(type='button' disabled) Editar perfil  
  .container-fluid
    each alumno in Alumno
      .row
        .col
          .container-fluid
            .row.barraresultado
              .col Resultados: de busqueda
            .row.rowtabla
              .col-md-6
                br
                |
                form(action='/administrar/usuario/editar' method='post')
                  .form-floating.mb-3
                    input#numControl.form-control.form-control-sm(type='number' name='numControl' required  value=alumno._id)
                    label.form-label(for='numControl') No. de Control
                  .form-floating.mb-3
                    input#nombre.form-control.form-control-sm(type='text' name='nombre' required=''  value=alumno.Nombre_s)
                    label.form-label(for='nombre') Nombre:
                  .form-floating.mb-3
                    input#apPaterno.form-control.form-control-sm(type='text' name='apPaterno' required  value=alumno.Apellido_Paterno)
                    label.form-label(for='apPaterno') Apellido paterno:
                  .form-floating.mb-3
                    input#apMaterno.form-control.form-control-sm(type='text' name='apMaterno' required  value=alumno.Apellido_Materno)
                    label.form-label(for='apMaterno') Apellido Materno:
                  .form-floating.mb-3
                    input#grupo.form-control.form-control-sm(type='text' name='grupo' required  value=alumno.Grupo)
                    label.form-label(for='grupo') Grupo:
                  .form-floating.mb-3
                    input#especialidad.form-control.form-control-sm(type='text' name='especialidad' required  value=alumno.Carrera_Tecnica)
                    label.form-label(for='especialidad') Especialidad:
                  .form-floating.mb-3
                    input#turno.form-control.form-control-sm(type='text' name='turno' required  value=alumno.Turno)
                    label.form-label(for='turno') Turno:
              .col-md-6
                br
                |
                form(action='/administrar/usuario/editar' method='post')
                  .form-floating.mb-3
                    input#generacion.form-control.form-control-sm(type='text' name='generacion' required  value=alumno.Generacion)
                    label.form-label(for='generacion') Generaci&oacute;n:
                  .form-floating.mb-3
                    select#sexo.form-control.form-control-sm(name='sexo' required  value=alumno.Genero)
                      if alumno.Genero =="Hombre"
                        option #{alumno.Genero}
                        option Mujer
                      else
                        option #{alumno.Genero}
                        option Hombre
                    label.form-label(for='sexo') Sexo:
                  .form-floating.mb-3
                    input#curp.form-control.form-control-sm(type='text' name='curp' required  value=alumno.CURP)
                    label.form-label(for='curp') CURP:
                  .row
                    .col
                      .form-floating.mb-3
                        input#correo1.form-control.form-control-sm(type='email' name='correo1' required  value=alumno.Correo_Electronico_1)
                        label.form-label(for='correo1') Correo 1:
                    .col
                      .form-floating.mb-3
                        input#correo2.form-control.form-control-sm(type='email' name='correo2'  value=alumno.Correo_Electronico_2)
                        label.form-label(for='correo2') Correo 2:
                  .row
                    .col
                      .form-floating.mb-3
                        input#lada.form-control.form-control-sm(type='number' name='lada' required  value=alumno.Clave_Lada)
                        label.form-label(for='lada') Lada:
                    .col
                      .form-floating.mb-3
                        input#c.form-control.form-control-sm(type='number' name='telefonoFijo1'  value=alumno.Telefono_de_contacto_fijo_1)
                        label.form-label(for='telefonoFijo1') Telefono fijo 1:
                  .form-floating.mb-3
                    input#telefonoFijo2.form-control.form-control-sm(type='number' name='telefonoFijo2'  value=alumno.Telefono_de_contacto_fijo_2)
                    label.form-label(for='telefonoFijo2') Telefono fijo 2:
                  .form-floating.mb-3
                    input#telefonoMovil.form-control.form-control-sm(type='number' name='telefonoMovil'  value=alumno.Telefono_movil_celular)
                    label.form-label(for='telefonoMovil') Telefono Movil:
                  .row
                    .col#btnssele
                      a.btn.btn-danger(href='/administrar/lista_usuario') 
                        | Cancelar
                      button.btn.btn-success(type='submit')
                        | Editar